    0% {
        background-color: #4f0f87;
    }

    25% {
        background-color: #76c72d;
    }

    40% {
        background-color: #76c72d;
    }

    55% {
        background-color: white;
    }

    70% {
        background-color: white;
    }

    100% {
        background-color: #4f0f87;
    }

}
