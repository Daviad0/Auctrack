    <h4>Item</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Name of Item:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ItemName)
        </dd>

        <dt>
            Description:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            Value:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Value)
        </dd>

        <dt>
            Current Bid:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Current)
