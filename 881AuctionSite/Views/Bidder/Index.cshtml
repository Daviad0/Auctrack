@model IEnumerable<DemoAuctrack.Models.Bidder>

@{
    ViewBag.Title = "Index";
}

<style>
    .form-control {
        display: inline-block;
        width: 100%;
        height: 40px;
        padding: 6px 12px;
        font-size: 14px;
        line-height: 1.42857143;
        color: #555;
        background-color: #eee;
        background-image: none;
        border: 2px solid #ccc;
        border-radius: 6px;
        -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075);
        box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075);
        -webkit-transition: border-color ease-in-out .15s, -webkit-box-shadow ease-in-out .15s;
        -o-transition: border-color ease-in-out .15s, box-shadow ease-in-out .15s;
        transition: border-color ease-in-out .15s, box-shadow ease-in-out .15s;
    }

        .form-control:focus {
            border-color: #66afe9;
            outline: 0;
            -webkit-box-shadow: inset 0 1px 1px rgba(0,0,0,.075), 0 0 8px rgba(102, 175, 233, .6);
            box-shadow: inset 0 1px 1px rgba(0,0,0,.075), 0 0 8px rgba(102, 175, 233, .6);
        }

        .form-control::-moz-placeholder {
            color: #999;
            opacity: 1;
        }

        .form-control:-ms-input-placeholder {
            color: #999;
        }

        .form-control::-webkit-input-placeholder {
            color: #999;
        }

        .form-control::-ms-expand {
            background-color: transparent;
            border: 0;
        }

        .form-control[disabled],
        .form-control[readonly],
        fieldset[disabled] .form-control {
            background-color: #eee;
            opacity: 1;
        }

        .form-control[disabled],
        fieldset[disabled] .form-control {
            cursor: not-allowed;
        }

    textarea.form-control {
        height: auto;
    }

    .buttontext {
        color: black;
    }

    .button {
        color: white;
        border: none;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        padding: 7px 16px;
        margin: 4px 2px;
        cursor: pointer;
        -webkit-transition-duration: 0.4s; /* Safari */
        transition-duration: 0.4s;
    }

    .button2:hover {
        box-shadow: 0 12px 16px 0 rgba(118,40,186,0.24),0 17px 50px 0 rgba(118,40,186,0.19);
    }
</style>

<br />
<h1 style="font-size:60px;text-align:center">The WSDP Auction Bidder List</h1>
<div style="border:2px solid red;text-align:center;background-color:#ff9e9e">
    <h4>The information on this page is for WSDP staff only!</h4>
</div>
<br />

@if (Request.IsAuthenticated)
{
    <h3 style="text-align:center">WSDP Staff Options</h3>
    <div style="text-align:center">
        <a href="@Url.Action("Create", "Bidder")" style="display:inline"><input type="button" class="button button2" style="margin-left:2px;background-color:#4f0f87;font-size:20px;border-radius:12px;display:inline" value="Create Bidder" /></a>
        <a href="@Url.Action("Index", "Item")" style="display:inline"><input type="button" class="button button2" style="margin-left:2px;background-color:#4f0f87;font-size:20px;border-radius:12px;display:inline" value="View Items" /></a>

    </div>
    <br />
    <br />
}

<table class="table table-condensed">
    <tr>
        <th>
            Bidder Number
        </th>
        <th>
            Bidder Name
        </th>
        <th>
            Bidder Contact Info
        </th>
        <th>
            Options
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BidderNum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContactInfo)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.BidderNum }) |
                @Html.ActionLink("Details", "Details", new { id = item.BidderNum }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.BidderNum })
            </td>
        </tr>
    }

</table>
