<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - AUCTRACK</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <style>
        .button {
            color: white;
            border: none;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            padding: 7px 16px;
            margin: 4px 2px;
            cursor: pointer;
            -webkit-transition-duration: 0.4s; /* Safari */
            transition-duration: 0.4s;
        }

        .button2:hover {
            box-shadow: 0 12px 16px 0 rgba(118,40,186,0.24),0 17px 50px 0 rgba(118,40,186,0.19);
        }
        .buttondanger:hover {
            box-shadow: 0 12px 16px 0 rgba(255,104,104,0.24),0 17px 50px 0 rgba(255,104,104,0.19);
        }
    </style>
</head>

<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Auctrack", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Connect", "Connect", "Home")</li>
                    <li>@Html.ActionLink("Item", "Index", "Item")</li>
                    @if (Request.IsAuthenticated)
                    {
                    <li>@Html.ActionLink("Bidder", "Index", "Bidder")</li>
                    }
                    <li><a href="http://www.881thepark.com/music/listen-live-now/">Listen Live Now!</a></li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>This is a DEMO for the 88.1 The Park Auction Website</p>
            <button class="button button2" style="margin-left:2px;background-color:#4f0f87;font-size:1vw;border-radius:12px;display:inline-block">@Html.ActionLink("About Auctrack", "About", new { controller = "Home" }, new { @style = "color:#ffffff" })</button>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
